package classwork.evaluatorExample.test;

import static org.junit.Assert.assertEquals;

import org.junit.Before;
import org.junit.Test;
import classwork.evaluatorExample.evaluators.DirectSumEvaluator;

public class DirectSumEvaluatorTest {
	
	private DirectSumEvaluator s;
	
	@Before
	public void setUp() {
		s = new DirectSumEvaluator();
	}
	
	@Test
	public void testEvalSum() {
		s.add(1.1);
		s.add(2.2);
		assertEquals(3.3, s.evaluate(), 0.01);
	}
	
	@Test
	public void testEval() {
		s.add(1.2);
		s.add(2.3);
		assertEquals(3.5d, (Double)s.evaluate(), 0.0);
	}
	
}
