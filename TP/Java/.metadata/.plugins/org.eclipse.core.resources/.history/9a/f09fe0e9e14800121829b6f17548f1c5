package classwork.interclass;

import java.util.List;
import java.util.ArrayList;

public class SumEvaluator extends Evaluator {

	private List<Double> eval = new ArrayList<Double>();
	
	@Override
	public void add(double d) {
		eval.add(d);
	}

	@Override
	public Double evaluate() {
		double res = 0;
		for(Double d : eval) {
			res +=d;
		}
		eval.removeAll(eval);
		eval.add(res);
	}

}
