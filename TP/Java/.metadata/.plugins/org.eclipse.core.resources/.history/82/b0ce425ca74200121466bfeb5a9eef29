package org.elsys.testExam;

public class Truck extends Vehicle {
	
	private int payLoad;
	
	public Truck(int plate, Coordinate coord) {
		regPlate = plate;
		position = coord;
	}
	
	public void load(int payLoad) {
		if(payLoad + this.payLoad > 1) {
			System.out.println("Cannot load more than a ton!");
			return;
		}
		super.load(payLoad);
	}
}
