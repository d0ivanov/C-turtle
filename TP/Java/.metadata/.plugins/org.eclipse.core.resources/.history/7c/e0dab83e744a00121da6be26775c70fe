package classwork.evaluatorExample.test;

import static org.junit.Assert.assertEquals;

import org.junit.Before;
import org.junit.Test;

import classwork.evaluatorExample.evaluators.SumEvaluator;

public class DirectSumEvaluatorTest {
	
	private SumEvaluator s;
	
	@Before
	public void setUp() {
		s = new SumEvaluator();
	}
	
	@Test
	public void testEvalSum() {
		s.add(1.1);
		s.add(2.2);
		assertEquals(3.3, s.evaluate(), 0.01);
	}
	
	@Test
	public void testEval() {
		s.add(1.2);
		s.add(2.3);
		assertEquals(3.5d, s.evaluate(), 0.0);
	}
	
}
